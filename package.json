{
  "name": "pkgcfg",
  "version": "0.3.0",
  "description": "Move those pesky configuration files to your package.json with pkgcfg",
  "main": "pkgcfg.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/download/pkgcfg.git"
  },
  "scripts": {
    "test": "mocha pkgcfg.spec.js",
    "test-watch": "mocha --watch pkgcfg.spec.js"
  },
  "test": {
    "data": {
      "array": [
        "one config to rule them all",
        "with",
        "pkgcfg"
      ],
      "with-dash": "ok",
      "with:colon": "ok",
      "with.dot": "ok",
      "with'quote": "ok"
    },
    "primitive": "{pkg name}",
    "nested-primitive": "{pkg repository.type}",
    "object": "{pkg repository}",
    "nested-object": "{pkg test.data}",
    "array": "{pkg keywords}",
    "nested-array": "{pkg test.data.array}",
    "unresolved": "{pkg unresolved.transforms.return.unmodified.text}",
    "array-length": "{pkg test.data.array.length}",
    "nth-item": "{pkg test.data.array.2}",
    "with-dash": "{pkg test.data.with-dash}",
    "with-colon": "{pkg test.data.with:colon}",
    "with-dot": "{pkg ['test','data','with.dot']}",
    "with-quote": "{pkg ['test','data','with''quote']}",
    "indirect": "{pkg test.primitive}",
    "direct-cyclic": "@pkg.test.direct-cyclic",
    "indirect-loop": "@pkg.test.indirect-cyclic",
    "indirect-cyclic": "@pkg.test.indirect-loop",
    "register": "{hello}"
  },
  "keywords": [
    "package.json",
    "configuration",
    "pkgand",
    "pkgarg",
    "pkgcfg",
    "pkgempty",
    "pkgenv",
    "pkgeq",
    "pkgexp",
    "pkgfor",
    "pkggen",
    "pkggt",
    "pkggte",
    "pkgif",
    "pkglt",
    "pkglte",
    "pkgmerge",
    "pkgneq",
    "pkgneq",
    "pkgnot",
    "pkgop",
    "pkgor",
    "pkgpath",
    "pkgtransform",
    "pkgvar"
  ],
  "author": "Stijn de Witt",
  "license": "CC-BY-4.0",
  "bugs": {
    "url": "https://github.com/download/pkgcfg/issues"
  },
  "homepage": "https://github.com/download/pkgcfg",
  "devDependencies": {
    "chai": "^3.4.1",
    "chalk": "^1.1.1",
    "mocha": "^2.3.4",
    "picolog": "^1.0.0"
  },
  "dependencies": {
    "object-path": "^0.9.2",
    "path": "^0.12.7",
    "pkgpath": "^0.1.1",
    "pkgvar": "^0.1.1"
  }
}
